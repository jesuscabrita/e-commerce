<div class="card" style="width: 18rem; margin-bottom: 20px;">
    <div class="card-body">
        {{#each thumbnail}}
        <img src={{this}} height="150" class="card-img-top" style="object-fit:cover" alt="..." />
        {{/each}}
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{description}}</p>
        <p class="card-text">{{code}}</p>
        <p class="card-text">{{owner}}</p>
        <p class="card-text">stock: {{stock}}</p>
        <button data-productid="{{this._id}}" onclick="addToCart('{{this._id}}')" class="btn btn-primary">AÃ±adir</button>
        <button data-productid="{{this._id}}" onclick="deleteToCart('{{this._id}}')" class="btn btn-danger">Eliminar</button>
        <a href="/product/{{_id}}" class="btn btn-info">Info</a>
    </div>
</div>