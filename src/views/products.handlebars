<style>
    #overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }
    .overlay-content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }
    .spinner {
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid #ffffff;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        animation: spin 2s linear infinite;
    }
    @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>
<div id="overlay" style="display: none;">
    <div class="overlay-content">
        <div class="spinner"></div>
    </div>
</div>

<div class="container">
    {{#if user}}
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Hola {{user.name}} {{user.apellido}} Bienvenido, estos son los productos
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{else}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        Por favor iniciar sesión <a href="/login" class="alert-link">aquí</a>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    {{/if}}

    <h1>Productos</h1>

    {{#if products.length }}
    <div class='row'>
        {{#each products }}
        <div class='col-3'>
            {{> productoArray}}
        </div>
        {{/each}}
    </div>
    {{else}}
    <img src="https://media2.giphy.com/media/3ohzdESy4qBmm24kTu/200.webp?cid=ecf05e474end5s2eletxz5tl5rik16ewbmvoh0dnq9czs8c5&rid=200.webp&ct=g"
        alt="Inactive">
    <h2>Sin productos</h2>
    {{/if}}

    <nav style="display: flex; justify-content: end; align-items: center;" aria-label="Page navigation">
        <ul class="pagination" style="display: flex; align-items: center; justify-content: center; gap: 10px;">
            <li>Pagina: {{page}}</li>
            {{#if hasPrevPage}}
            <li class="page-item">
                <a class="btn btn-primary" href="?page={{prevPage}}">Anterior</a>
            </li>
            {{/if}}
            {{#if hasNextPage}}
            <li class="page-item">
                <a class="btn btn-primary" href="?page={{nextPage}}">Siguiente</a>
            </li>
            {{/if}}
        </ul>
    </nav>
</div>

<script>
    function addToCart(productId) {
        const cartId = '{{user.cart._id}}';
        const overlay = document.getElementById('overlay');
        overlay.style.display = 'block';

        fetch(`/api/carts/${cartId}/product/${productId}`, { method: 'POST' })
            .then(response => {
                if (!response.ok) {
                    throw new Error('No se pudo agregar el producto');
                }
                return response.json();
            })
            .then(data => {
                console.log('Producto agregado al carrito:', data);
                alert('Producto agregado al carrito');
            })
            .catch(error => {
                console.error('Error al agregar el producto:', error);
                if (error.message === 'No permissions') {
                    alert('No tienes permisos para agregar el producto');
                } else {
                    alert(error.message);
                }
            })
            .finally(() => {
                overlay.style.display = 'none';
            });
    }

    function deleteToCart(productId) {
        const overlay = document.getElementById('overlay');
        overlay.style.display = 'block';
        var confirmacion = confirm("¿Estás seguro que deseas eliminar este producto?");
        if (confirmacion) {
            fetch(`/api/products/${productId}`, {
                method: 'DELETE'
            })
                .then(response => {
                    return response.json();
                })
                .then(data => {
                    console.log('Producto eliminado:', data);
                    window.location.reload();
                    alert(data.message);
                })
                .catch(error => {
                    if (error.message === 'No permissions') {
                        alert('No tienes permisos para eliminar el producto');
                    } else {
                        alert('Error al eliminar el producto');
                    }
                }).finally(() => {
                overlay.style.display = 'none';
            });
        } else {
            // El usuario canceló la acción, no se hace nada.
        }
    }
</script>